mixin poly_but(type,text)
  button.poly-but = text
    svg(height="0" width="0" viewbox="0 0 100 100")
      defs
        clippath#but-type1(clippathunits="objectBoundingBox")
          polygon(points="0,0 1,.06 1,.98 0,1" stroke="#000000")
        clippath#but-type2(clippathunits="objectBoundingBox")
          polygon(points="0,0 .8,.2 1,.8 0,1" stroke="#000000")
        clippath#but-type3(clippathunits="objectBoundingBox")
          polygon(points="0,.1 .9,0 1,1 0,.9" stroke="#000000")
      
